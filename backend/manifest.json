

{
    "manifest_version": 3,
    "name": "Time Table Mommy",
    "version": "1.0",
    "description": "Store tasks using voice commands",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Voice Task Manager with AI"      
      "default_popup": "popup.html",
      "default_title": "Voice Task Manager with AI"      
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "tabs",
      "storage",
      "scripting",
      "declarativeNetRequest",
      "activeTab",
      "idle",
      "notifications", 
      "alarms"
    ],
    "host_permissions": [
      "://.youtube.com/*",
      "https://api.openai.com/*",
      "://.facebook.com/*",
      "://.netflix.com/*",
      "://.instagram.com/*"
    ]
}